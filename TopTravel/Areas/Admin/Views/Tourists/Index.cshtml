@using PagedList.Mvc
@model PagedList.IPagedList<TopTravel.Tourist>

@{
    ViewBag.Title = "Tourist";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <h1 class="h3 mb-2 text-gray-800">Tourists</h1>
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <div class="card shadow mb-4">
        <div class="card-body">
            <div class="dataTables_wrapper dt-bootstrap4">
                <div class="row">
                    <div class="col-sm-12 col-md-6">
                    </div>
                    <div class="col-sm-12 col-md-6">

                        @using (Html.BeginForm("Index", "Tourists", FormMethod.Get))
                        {
                            <div id="dataTable_filter" class="dataTables_filter">
                                <label>Search:@Html.TextBox("SearchString", null, new { @class = "form-control form-control-sm", @type = "search" })</label>
                            </div>
                        }

                    </div>
                </div>
                <div class="row">
                    <table class="table table-bordered dataTable">
                        <tr>
                            <th>
                                @Html.Label("Name")
                            </th>
                            <th>
                                @Html.Label("Birthday")
                            </th>
                            <th>
                                @Html.Label("Gender")
                            </th>
                            <th>
                                @Html.Label("TouristType")
                            </th>
                            <th>
                                @Html.Label("Nationality")
                            </th>
                            <th>
                                @Html.Label("Passport")
                            </th>
                            <th>
                                @Html.Label("ExpiredDate")
                            </th>
                            <th>
                                @Html.Label("Status")
                            </th>
                            <th>
                                @Html.Label("PaymentMethod")
                            </th>
                            <th></th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Birthday)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Gender)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TouristType)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Nationality)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Passport)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ExpiredDate)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Status)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.BookTour.PaymentMethod)
                                </td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new {/* id=item.PrimaryKey */}) |
                                    @Html.ActionLink("Details", "Details", new {/* id=item.PrimaryKey */}) |
                                    @Html.ActionLink("Delete", "Delete", new {/* id=item.PrimaryKey */})
                                </td>
                            </tr>
                        }

                    </table>
                    <div class="row">
                        <div class=" col-sm-12 col-md-5">
                        </div>
                        <div class=" col-sm-12 col-md-7">
                            <div class="dataTables_paginate">
                                @Html.PagedListPager(Model, page => Url.Action("Index",
                                    new {page, currentFilter = ViewBag.CurrentFilter}))
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
