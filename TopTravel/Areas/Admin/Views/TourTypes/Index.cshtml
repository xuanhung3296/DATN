@model PagedList.IPagedList<TopTravel.TourType>
@using PagedList.Mvc;
@using PagedList;
@{
    ViewBag.Title = "TourTypes";
}

<h1 class="h3 mb-2 text-gray-800">TourTypes</h1>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div class="card shadow mb-4">
    <div class="card-body">
        <div class="dataTables_wrapper dt-bootstrap4">
            <div class="row">
                <div class="col-sm-12 col-md-6">
                </div>
                <div class="col-sm-12 col-md-6">

                    @using (Html.BeginForm("Index", "TourTypes", FormMethod.Get))
                    {
                        <div id="dataTable_filter" class="dataTables_filter">
                            <label>Search:@Html.TextBox("SearchString", null, new { @class = "form-control form-control-sm", @type = "search" })</label>
                        </div>
                    }

                </div>
            </div>
            <div class="row">
                <table class="table table-bordered dataTable">
                    <tr>
                        <th>
                            @*@Html.DisplayNameFor(model => model.TourTypeName)*@

                            @Html.ActionLink("TourTypeName", "Index", new { sortOrder = ViewBag.NameSortParm })
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.TourTypeName)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.TourTypeID }) |
                                @Html.ActionLink("Details", "Details", new { id = item.TourTypeID }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.TourTypeID })
                            </td>
                        </tr>
                    }

                </table>
                
                <br />
              
            </div>
            <div class="row">
                <div class=" col-sm-12 col-md-5">                
                </div>
                <div class=" col-sm-12 col-md-7">
                    <div class="dataTables_paginate">
                        @Html.PagedListPager(Model, page => Url.Action("Index",
                            new {page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter}))
                    </div>
                    </div>
                   
            </div>
           

            

        </div>
    </div>
</div>