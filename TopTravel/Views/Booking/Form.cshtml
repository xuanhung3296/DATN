                                                            {
                                                                new SelectListItem {Text = "Nam", Value = "Nam",},
                                                                new SelectListItem {Text = "Nữ", Value = "Nữ"},
                                                            }, Model.ListTourist[i].Gender, new {@class = "form-control"})


                                                        </div>
                                                    </div>
                                                    <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12 mg-bot10">
