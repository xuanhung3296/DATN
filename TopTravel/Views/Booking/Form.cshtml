                                                                $(function () {
                                                                    $(".date-picker").datepicker({
                                                                        dateFormat: 'dd-M-yy'
                                                                    });

                                                                });

                                                            </script>
                                                        </div>
                                                    </div>

                                                    <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12 mg-bot10">
                                                        <label class="mg-bot5">Loại khách</label>
                                                        <div>
                                                            @{
                                                                if (i < Convert.ToInt32(@ViewBag.NumberAdult))
                                                                {

                                                                    @Html.DropDownListFor(model => model.ListTourist[i].TouristType, new List<SelectListItem>
                                                                                                                    {
                                                                                                                        new SelectListItem {Text = "Người lớn", Value = "Người lớn", Selected = true},
                                                                                                                        new SelectListItem {Text = "Trẻ em", Value = "Trẻ em"},
                                                                                                                    }, Model.ListTourist[i].TouristType, new {@class = "form-control", @id = "TouristType_" + i})
                                                                }
                                                                else
                                                                {

                                                                    @Html.DropDownListFor(model => model.ListTourist[i].TouristType, new List<SelectListItem>
