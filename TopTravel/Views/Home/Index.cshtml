<!-- Search -->

<div class="search">


    <!-- Search Contents -->

    <div class="container fill_height">
        <div class="row fill_height">
            <div class="col fill_height">

                <!-- Search Tabs -->

                <div class="search_tabs_container">
                    <div class="search_tabs d-flex flex-lg-row flex-column align-items-lg-center align-items-start justify-content-lg-between justify-content-start">
                        @foreach (var item in ViewBag.TourTypes)
                        {
                            <div class="search_tab d-flex flex-row align-items-center justify-content-lg-center justify-content-start">@item</div>

                        }


                    </div>
                </div>

                <!-- Search Panel -->

                <div class="search_panel active">
                    @using (Html.BeginForm("SearchTour", "Search", FormMethod.Get, new { @class = "search_panel_content d-flex flex-lg-row flex-column align-items-lg-center align-items-start justify-content-lg-between justify-content-start" }))
                    {
                        <div class="search_item" style="display:none">
                            <div>label</div>
                            @Html.TextBox("label", (string)ViewBag.Label, new { @class = "destination search_input", @id = "label" })

                        </div>
                        <div class="search_item">
                            <div>departure</div>
                            @Html.TextBox("departure", (string)ViewBag.Departure, new { @class = "destination search_input" })
                        </div>
                        <div class="search_item">
                            <div>destination</div>
                            @Html.TextBox("destination", (string)ViewBag.Destination, new { @class = "destination search_input" })

                        </div>
                        <div class="search_item">
                            <div>check out</div>
                            @Html.TextBox("startDate", (string)ViewBag.StartDate, new { @id = "date" })

                            <script>
                                $("#date").dateDropdowns({
                                    submitFieldName: 'date',
                                    submitFormat: "dd/mm/yyyy",
                                    maxAge: 68
                                    //,required: true
                                });
                            </script>
                        </div>

                        <div class="search_item">
                            <div>price</div>
                            @Html.TextBox("price", (string)ViewBag.Price, new { @class = "destination search_input" })
                        </div>


                        <button class="button search_button">search<span></span><span></span><span></span></button>
                    }
                </div>


            </div>
        </div>
    </div>
</div>

<!-- Intro -->

<div class="intro">
    <div class="container">
        <div class="row">
            <div class="col">
                <h2 class="intro_title text-center">Chúng tôi luôn mang lại cho bạn sự lựa chọn tốt nhất</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-10 offset-lg-1">
                <div class="intro_text text-center">
                    <p>Khám phá và đặt trước các hoạt động du lịch đặc sắc với giá độc quyền tốt nhất </p>
                </div>
            </div>
        </div>
        <div class="row intro_items">

            <!-- Intro Item -->

            @foreach (var item in ViewBag.listDestination)
            {
                <div class="col-lg-4 intro_col">
                    <div class="intro_item">
                        <div class="intro_item_overlay"></div>

                        <div class="intro_item_background" style="background-image: url(@item.Image);background-size:100% 100%"></div>
                        <div class="intro_item_content d-flex flex-column align-items-center justify-content-center">
                            <div class="intro_date">@item.StartDate.ToString("dd/MM/yyyy")</div>
                            <div class="button intro_button"><div class="button_bcg"></div> @Html.ActionLink("See more","Index","Tour",new{id=@item.TourID},null)<span></span><span></span><span></span></div>
                            <div class="intro_center text-center">
                                <h1>@item.Destination</h1>
                                <div class="intro_price">From @string.Format("{0:0,0}", @item.ListedPrice)đ</div>
