                                                            <label class="mg-bot5">Ngày hết hạn (<span class="price">*</span>)</label>
                                                            <div>
                                                                @Html.EditorFor(model => model.ListTourist[i].ExpiredDate, new { htmlAttributes = new { @class = "form-control date-picker" } })
                                                                <script type="text/javascript">
                                                                    $(function () {
